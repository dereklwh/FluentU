<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme attributes here -->
        <item name="colorPrimary">@color/custom_color_1</item>
        <item name="colorPrimaryDark">@color/custom_color_3</item>
        <item name="colorAccent">@color/custom_color_2</item>
        <!-- Add more customizations as needed -->
        <item name ="android:fontFamily"> @font/font_family</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:textColor">#000000</item> <!-- Set default text color to black -->
    </style>
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <!-- Background color for the button -->
        <item name="android:background">@drawable/custom_button_background</item>

        <!-- Text color for the button -->
        <item name="android:textColor">@color/white</item>

        <!-- Other attributes as needed -->
    </style>
</resources>